<h1>Lists</h1>



<div id="lists">
   <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Name of List</th>
                      <th>Public</th>
                      <th>Deleted?</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @lists.each do |list| %>
                 
                      <tr>
                      	 
                        <td><%= list.name_of_list %></td>
                        <td><%= list.public_view %></td>
                        <td><%= list.discarded? ? 'âœ“': ' ' %></td>
                        <td><%= link_to 'Show', list %></td>
                        <td><%= link_to 'Edit', edit_list_path(list) %></td>
                        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
              
                    <% end %>
                  </tbody>
                </table>
</div>

