<%= form_with(model: [@list, @list_item]) do |form| %>
  <% if list_item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(list_item.errors.count, "error") %> prohibited this list_item from being saved:</h2>

      <ul>
        <% list_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :short_name, style: "display: block" %>
    <%= form.text_field :short_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label :completion_status,  style: "display: block"  %>
    <%= form.check_box :completion_status%>
  </div>

   <%= content_tag :div, class: 'field' do %>
      <%= check_box_tag :restore %>
      Restore Deleted Record
  <% end if list_item.discarded? %>

  <div>
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
